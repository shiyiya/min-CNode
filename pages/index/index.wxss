page,
.topics {
  height: 100%;
}

.nav {
  color: #80bd01;
  height: 72rpx;
  background: #fff;
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 1;
  display: flex;
  padding: 4rpx;
}

.nav-item {
  padding: 10rpx 14rpx;
  width: 150rpx;
  text-align: center;
  font-size: 34rpx;
}

.nav-item.active {
  border-bottom: #80bd01 4rpx solid;
}

.scroll-topic-list {
  margin-top: 72rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  display: block;
  color: rgb(161, 158, 158);
}

.topic-list .topic-item {
  padding: 30rpx 20rpx;
  position: relative;
}

.topic-item .avatar {
  float: left;
  width: 100rpx;
  height: 100rpx;
  border-radius: 66%;
  margin-right: 20rpx;
}

.topic-item .time {
  font-size: 24rpx;
}

.topic-item .title {
  margin-bottom: 10rpx;
  font-size: 30rpx;
  overflow: hidden;
  width: 70%;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.topic-item .content {
  margin-left: -30rpx;
}

.topic-item .meta {
  font-size: 20rpx;
  text-align: center;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
}

.meta .tag {
  background: rgb(134, 197, 71);
  color: #fff;
  padding: 8rpx 12rpx;
  border-radius: 6rpx;
  max-width: 50rpx;
  margin: 0 auto 10rpx auto;
}

.meta .tag.top {
  background-color: rgb(255, 100, 131);
}

.meta .tag.ask {
  background-color: slateblue;
}
